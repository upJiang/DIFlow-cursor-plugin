{
  "publisher": "junfengjiang",
  "name": "diflow", 
  "displayName": "DiFlow",
  "description": "DiFlow，开发小工具",
  "version": "1.1.1",
  "icon": "images/title.jpg",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "DiFlow.createScript",
        "title": "创建区块"
      },
      {
        "command": "DiFlow.createSnippets",
        "title": "创建代码片段"
      },
      {
        "command": "DiFlow.openSetting",
        "title": "设置",
        "icon": "$(gear)"
      },
      {
        "command": "DiFlow.explainByChatGPT",
        "title": "解释这段文案"
      },
      {
        "command": "DiFlow.chatGPTView",
        "title": "chatGPT对话框"
      },
      {
        "command": "DiFlow.openChatGPTView",
        "title": "打开chatGPT对话框"
      },
      {
        "command": "DiFlow.hideChatGPTView",
        "title": "关闭chatGPT对话框",
        "icon": "$(close)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "DiFlow",
          "title": "DiFlow",
          "icon": "images/tool.png"
        }
      ]
    },
    "views": {
      "DiFlow": [
        {
          "id": "DiFlow.welcome",
          "name": "welcome",
          "when": "!DiFlow.chatGPTView"
        },
        {
          "type": "webview",
          "id": "DiFlow.chatGPTView",
          "name": "chatGPT",
          "when": "DiFlow.chatGPTView"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "DiFlow.welcome",
        "contents": "[打开chatGPT对话框](command:DiFlow.openChatGPTView)\n[设置](command:DiFlow.openSetting)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "submenu": "DiFlow/explorer/context",
          "when": "explorerResourceIsFolder"
        }
      ],
      "DiFlow/explorer/context": [
        {
          "command": "DiFlow.createScript"
        }
      ],
      "editor/context": [
        {
          "submenu": "DiFlow/editor/context"
        }
      ],
      "DiFlow/editor/context": [
        {
          "command": "DiFlow.createSnippets"
        },
        {
          "command": "DiFlow.explainByChatGPT"
        }
      ],
      "view/title": [
        {
          "command": "DiFlow.hideChatGPTView",
          "when": "view == DiFlow.chatGPTView",
          "group": "navigation@4"
        },
        {
          "command": "DiFlow.openSetting",
          "when": "view == DiFlow.chatGPTView",
          "group": "navigation@3"
        }
      ]
    },
    "submenus": [
      {
        "id": "DiFlow/explorer/context",
        "label": "DiFlow",
        "icon": "$(octoface)"
      },
      {
        "id": "DiFlow/editor/context",
        "label": "DiFlow",
        "icon": "$(octoface)"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "DiFlow",
      "properties": {
        "DiFlow.hostname": {
          "type": "string",
          "default": "",
          "description": "第三方代理地址"
        },
        "DiFlow.apiKey": {
          "type": "string",
          "default": "",
          "description": "第三方代理提供的apiKey"
        },
        "DiFlow.model": {
          "type": "string",
          "default": "gpt-3.5-turbo",
          "description": "chatGPT模型（默认：gpt-3.5-turbo）"
        }
      }
    }
  },
  "repository": "https://github.com/upJiang/jiang-vscode-plugin",
  "scripts": {
    "dev": "yarn --cwd \"webview-vue\" dev",
    "build": "yarn --cwd \"webview-vue\" build",
    "vscode:prepublish": "webpack --mode production && yarn --cwd \"webview-vue\" build",
    "watch": "webpack --watch",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js",
    "tsc": "vue-tsc --noEmit --skipLibCheck"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/mocha": "^10.0.2",
    "@types/vscode": "^1.83.0",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "@vscode/test-electron": "^2.3.4",
    "babel-eslint": "^10.1.0",
    "eslint": "^8.51.0",
    "eslint-plugin-prettier": "^5.0.1",
    "glob": "^10.3.3",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "mocha": "^10.2.0",
    "prettier": "^3.0.3",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "galleryBanner": {
    "color": "#1890ff"
  },
  "dependencies": {
    "fs-extra": "^11.1.1",
    "vscode-webview-tool": "^1.0.4"
  }
}
